@model IEnumerable<ArticleChat.Models.Db.Role>

<h1>Роли</h1>
<a asp-action="Create">Создать новую роль</a>
<table>
    <thead>
        <tr>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.UserRole</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@role.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>