@model IEnumerable<ArticleChat.Models.Db.User>

<h1>Пользователи</h1>
<a asp-action="Create">Создать нового пользователя</a>
<table>
    <thead>
        <tr>
            <th>Никнейм</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Nickname</td>
                <td>@user.Role?.UserRole</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@user.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>